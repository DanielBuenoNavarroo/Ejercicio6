<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def10dp"
        android:layout_weight="2"
        android:background="@color/morado"
        android:gravity="center"
        android:lineSpacingExtra="0sp"
        android:padding="8sp"
        android:text="@string/Titulo"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/circulo"
            android:paddingHorizontal="50dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="@string/Name" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def10dp"
        android:layout_marginHorizontal="@dimen/def10dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="2"
        android:background="@drawable/boton_swich_formato"
        android:text="@string/edit_profile"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/parte_abajo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def10dp"
        android:layout_marginHorizontal="@dimen/def10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Followers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Fol" />

        <TextView
            android:id="@+id/Following"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Foling" />

        <TextView
            android:id="@+id/Estrellita"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Estr" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/def10dp"
        android:layout_weight="15" />

    <Button
        android:id="@+id/btnInicio1"
        android:layout_width="100dp"
        android:layout_height="@dimen/def10dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="@string/home" />

</LinearLayout>